# MongoDB Configuration
MONGO_URI=mongodb://username:password@host-ip:port
MONGO_DB_NAME=task_genie

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
WEBHOOK_URL=https://your-domain.com/webhook

# Redis Configuration
REDIS_URL=redis://localhost:6379 # Make sure to not have a trailing slash here

# Encryption Key (Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
ENCRYPTION_KEY=your_encryption_key_here

# Logging Configuration
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

LLM=your-openai-model-here

# LangSmith Configuration
# Note: LangSmith uses LANGCHAIN_* environment variable names
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=your-langsmith-api-key-here
LANGCHAIN_PROJECT=your-langsmith-project-name-here

# ============================================================================
# DOCKER-ONLY VARIABLES (Not used by the app, only by docker-compose files)
# Uncomment these ONLY if using docker-compose.yaml or docker-compose.dev.yaml
# ============================================================================
# MONGO_USERNAME=admin
# MONGO_PASSWORD=password
# DOCKER_IMAGE=vasujain275/task-genie:latest
# PORT=8080

# This is an example file. Copy it to configuration.yml and fill in your secrets.
# DO NOT COMMIT the configuration.yml file to Git.

authentication_backend:
  file:
    path: /config/users_database.yml
    password:
      algorithm: argon2id
      iterations: 3
      memory: 65536
      parallelism: 4
      salt_length: 16
      key_length: 32

session:
  secret: "REPLACE_THIS_WITH_A_LONG_RANDOM_STRING"
  name: "garden_session"
  redis:
    host: redis
    port: 6379

server:
  host: 0.0.0.0
  port: 9091

# By default, Authelia will now protect every request forwarded to it.
# We have removed the specific domain rule.
access_control:
  default_policy: one_factor

notifier:
  filesystem:
    filename: /config/notification.txt
